<%- include("inc/header"); %>
<script type="text/javascript">
	$(function() {
		resizeContent();
		resizeElement("#searchResults", "#searchForm", 19);
		resizeElement("#queueList", "#queueTitle", 4);
	});
</script>
<div class="container">
	<div class="row" style="height:100%;">
		<div class="col-sm-6 right">
			<span id="queueTitle">Queued songs:</span>
			<div class="vScroll" id="queueList">
				<% if ((typeof songs == 'undefined') || (songs.length == 0) || (songs.length <= 0) || (songs == {})) { %>
					<b>No songs in queue</b>
				<% } else { %>
				<% console.log(songs); %>
					<% for(var key in songs) { %>
						<% var song = songs[key]; %>
						<% console.log(""); %>
						<div class="well well-sm">
							<%- song.snippet.title; %>
						</div>
					<% } %>
				<% } %>
			</div>
		</div>
		<div class="col-sm-6 right">
			<form id="searchForm">
				Search:
				<div class="form-group">
				<div class="input-group input-group-lg">
					<input type="text" class="form-control input-lg" id="searchInput" placeholder="Search" name="q">
					<span class="input-group-btn">
						<button class="btn btn-default btn-lg" type="submit"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
					</span>
				</div>
				</div>
				<div class="form-group">
					<select class="form-control" id="searchSort" name="sort">
						<option value="relevance">Sort by: Relevance</option>
						<option value="date">Sort by: Upload date</option>
						<option value="viewCount">Sort by: View count</option>
						<option value="rating">Sort by: Rating</option>
					</select>
				</div>
			</form>
			<div id="searchResults" class="vScroll"></div>
		</div>
	</div>
</div>
<%- include("inc/footer"); %>